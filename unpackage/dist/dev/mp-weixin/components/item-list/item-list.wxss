.noneData {
  padding-top: 200rpx;
  text-align: center;
  color: #999999;
  font-size: 32rpx;
}
.test {
  padding: 32rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.test .add-img {
    width: 22rpx;
    height: 22rpx;
}
.test .add-img_y {
    width: 22rpx;
    height: 18rpx;
    margin-right: 6rpx;
}
.test .title {
    margin-bottom: 36rpx;
    position: relative;
}
.test .title .sort {
      position: absolute;
}
.test .aswerbox {
    padding-left: 24rpx;
    margin-bottom: 60rpx;
}
.test .aswerbox .sort {
      position: absolute;
      left: 4rpx;
}
.test .aswerbox .option {
      padding-left: 40rpx;
      display: block;
}
.test .bottom {
    padding-left: 30rpx;
    color: #919191;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.test .bottom .type {
      margin-right: 40rpx;
}
.test .bottom .addItemBt {
      position: absolute;
      right: 0;
      bottom: -14rpx;
      border: 1px solid #919191;
      border-radius: 2px;
      padding: 12rpx 18rpx;
}
.test .bottom .addItemBt_y {
      position: absolute;
      right: 0;
      bottom: -14rpx;
      background-color: #37aafd;
      color: #fff;
      border-radius: 4rpx;
      padding: 12rpx 18rpx;
}

